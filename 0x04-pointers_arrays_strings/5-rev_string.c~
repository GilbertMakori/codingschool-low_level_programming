#include "holberton.h"

/**
 * rev_string - function with one argument
 * @s: char type argument
 *
 * Description: reversing a string
 * Return: na
 */
void rev_string(char *s)
{
	int i, k;
	int tmp;

	i = 0;
	while (s[i] != '\0')
	{
		i++;
	}
	k = 0;
	i -= 1;
	while (i < 0)
	{
		tmp = s[k];
		s[k] = s[i];
		s[i] = tmp;
		i--;
		k++;
	};
}
